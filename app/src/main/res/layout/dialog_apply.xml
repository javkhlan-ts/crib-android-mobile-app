<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/shape_sign_in_button">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Confirmation"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By processing this action, you agreed to pay and send followings to the landlord: "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" * Application fee: $50"/>
        <TextView
            android:id="@+id/apply_application_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/apply_paystub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/apply_bank_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/apply_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_sign_in_button"
                android:text="Cancel"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center_horizontal|bottom"/>
            <Button
                android:id="@+id/button_confirm_and_pay"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_sign_in_button"
                android:text="Confirm and Pay"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center_horizontal|bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>