<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginBuyRentLandlord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Login.LoginMainActivity">

    <ImageView
        android:id="@+id/imageViewIconCrib"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:contentDescription="@string/crib"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/ic_ger" />

    <TextView
        android:id="@+id/textVIewTitleCrib"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/crib"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="115sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewIconCrib"
        app:layout_constraintStart_toStartOf="@+id/imageViewIconCrib"
        app:layout_constraintTop_toBottomOf="@+id/imageViewIconCrib"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonRent"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:background="@drawable/shape_sign_in_button"
        android:text="I want to rent"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/buttonLandlord"
        app:layout_constraintEnd_toEndOf="@+id/textVIewTitleCrib"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textVIewTitleCrib"
        app:layout_constraintTop_toBottomOf="@+id/textVIewTitleCrib" />

